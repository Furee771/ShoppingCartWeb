@model ShoppingCart.DataAccess.ViewModels.ProductVM
@{
    ViewData["Title"] = "Продукты";
}
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Список продуктов</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product"><i class="bi bi-plus-circle"></i>&nbsp; Добавить новый продукт</a>
        </div>
    </div>
</div>

<table id="myTable" class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>
                Наименование продукта
            </th>
            <th>
                Описание продукта
            </th>
            <th>
                Цена
            </th>
            <th>
                Категория
            </th>
            <th>
                Действие
            </th>
        </tr>
    </thead>
</table>

@section scripts{
    <script src="~/js/Product.js"></script>
}