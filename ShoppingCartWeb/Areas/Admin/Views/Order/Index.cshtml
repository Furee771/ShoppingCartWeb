@{
    ViewData["Title"] = "Заказы";
}
<div class="container p-4">
    <div class"row p-3">
        <div class="col-6">
            <h2 class="text-primary">Список Заказов</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="order" asp-action="Index" asp-route-status="pending">
                В ожидании
            </a>
            <a class="btn btn-primary" asp-controller="order" asp-action="Index" asp-route-status="approved">
                Oдобренный
            </a>
            <a class="btn btn-primary" asp-controller="order" asp-action="Index" asp-route-status="underprocess">
                В процессе
            </a>
            <a class="btn btn-primary" asp-controller="order" asp-action="Index" asp-route-status="shipped">
                Отправленный
            </a>
            <a class="btn btn-primary" asp-controller="order" asp-action="Index" asp-route-status="all">
                Все
            </a>
        </div>
    </div>
</div>

<table id="myTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Имя
            </th>
            <th>
                Телефон номер
            </th>
            <th>
                Статус заказа
            </th>
            <th>
                Весь заказ
            </th>
            <th>
               Действие
            </th>
        </tr>
    </thead>

</table>

@section scripts{
    <script src="~/js/Order.js"></script>
}