@model ShoppingCart.DataAccess.ViewModels.CartVM
<form method="post">
    <div class="row">
        <div class="col-md-8 md-4">
           <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Детали Покупок</h5>
            </div>
            <div class="card-body">
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="form7Example1">Имя</label>
                                <input type="text" asp-for="@Model.OrderHeader.Name" class="form-control"/>
                            </div>
                            <div class="form-outline mb-4">
                            <label class="form-label" for="form7Example2">Телефон</label>
                            <input type="text" asp-for="@Model.OrderHeader.Phone" class="form-control"/>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form7Example3">Адресс</label>
                            <textarea type="text" asp-for="@Model.OrderHeader.Address" class="form-control"></textarea>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form7Example4">Город</label>
                            <input type="text" asp-for="@Model.OrderHeader.City" class="form-control"/>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form7Example5">Страна</label>
                            <input type="text" asp-for="@Model.OrderHeader.State" class="form-control"/>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form7Example1">Почтовый индекс</label>
                            <input type="text" asp-for="@Model.OrderHeader.PostalCode" class="form-control"/>
                        </div>
                        </div>
                    </div>
            </div>
            </div>
        </div>
         <div class="col-md-4 md-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Итого</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach(var details in @Model.ListOfCart)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            <span style="width: 150px">@details.Product.Name</span>
                            <span>Количество: @details.Count</span>
                            <span style="min-width: 60px">@(((details.Product.Price)*(details.Count)).ToString("c"))</span>
                        </li>
                    }
                    <li  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                        <div>
                            <strong>Общая сумма</strong>
                            <strong>
                                <p class="mb-0">(Включая НДС)</p>
                            </strong>
                        </div>
                        <span><strong>@Model.OrderHeader.OrderTotal.ToString("c")</strong></span>
                    </li>
                </ul>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Сделать покупку</button>
            </div>
        </div>
    </div>
    </div>
</form>



