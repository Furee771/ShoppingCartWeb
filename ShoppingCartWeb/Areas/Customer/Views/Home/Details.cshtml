@model ShoppingCart.Models.Cart
 <h1>Карточка продукта</h1>
<form method="post">

    <div class="row">
        <div class="col-4">
            <img src="@Model.Product.ImageUrl" width="200" height="200"/>
            <input type="hidden" asp-for="ProductId"/>
        </div>
        <div  class"col-8">
            <div class="row">
                <label asp-for="Product.Name"> Наименование продукта: @Model.Product.Name</label>
                <label asp-for="Product.Description">Описание: @Model.Product.Description</label>
                <label asp-for="Product.Description"> Цена: @Model.Product.Price.ToString("0.00")</label>
                <label asp-for="Product.Category.Id"> Категория: @Model.Product.Category.Name</label>
                <div class="form-control">
                    <label asp-for="Count"> Количество </label>
                    <input asp-for="Count" class="form-control"/>
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
                <div class"form-control">
                    <button class="btn btn-success" asp-action="Index" asp-controller="Home">Назад</button>
                    <button type="submit" class="btn btn-dark">Добавить в корзину</button>
                </div>
            </div>
        </div>
    </div>
</form>