@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContext;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Интернет Ресторан</title>
    <link rel="stylesheet" href="~/css/Sketchy.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShoppingCartWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">SSTRANNO</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor03">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a asp-area="customer" asp-action="Index" asp-controller="home" class="nav-link active">Главная
            <span class="visually-hidden">(current)</span>
          </a>
        </li>
        @if(User.IsInRole("Admin")) {
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Category">Категории</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="Admin" asp-action="Index" asp-controller="Product">Продукты</a>
            </li>
        }
        <li class="nav-item">
          <a class="nav-link" asp-area="Customer" asp-action="Index" asp-controller="Cart">
              @await Component.InvokeAsync("Cart")
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-area="Admin"  asp-controller="Order" asp-action="Index">Заказы</a>
        </li>
      </ul>
      <partial name="_LoginPartial"/>
    </div>
  </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ShoppingCartWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
   @* <script src="https://cdn.tiny.cloud/1/q@*9lqdp8mgj9ugcmpcsylgtgkptjs78meaqyfkpp8xkbbym9x/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>*@
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
